

@{
    Layout = "_AuthLayout";
}

<div class="container-fluid d-flex"
     style="height:100vh; margin:0; padding:0; overflow:hidden;">

    <!-- Left: Profile Image & Title -->
    <div class="d-flex flex-column justify-content-center align-items-center"
         style="width:35%; min-width:200px; padding:1rem; background:#0A1A2F;">
        <img src="Image/view.jpg"
             class="rounded-circle img-fluid mb-3"
             style="width:70%; aspect-ratio:1/1; object-fit:cover;"
             alt="Profile">
        <div style="color:white; text-align:center;">
            <h3><strong><i>Hotel Management System</i></strong></h3>
        </div>
    </div>

    <!-- Right: Login Card -->
    <div class="d-flex justify-content-center align-items-center"
         style="width:65%; min-width:300px; padding:1rem; background: radial-gradient(circle at top right, #32CD32 0%, rgba(0,0,0,0.9) 40%, #000 80%">
        <div class="card rounded-3"
             style="width:21rem; background: rgba(255,255,255,0.06); backdrop-filter: blur(20px); border:1px solid rgba(255,255,255,0.1);">

            <div class="card-body">

                <h4 class="text-center mb-4 text-white">Login</h4>

                <form>

                    <div class="mb-2">
                        <label class="form-label text-white">Email</label>
                        <input type="email" class="form-control" placeholder="Enter email" id="email"
                               style="background:#c2c2c2; color:#000; border:1px solid #999;">
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-white">Password</label>
                        <input type="password" class="form-control" placeholder="Enter password" id="password"
                               style="background:#c2c2c2; color:#000; border:1px solid #999;">
                    </div>

                    <button type="submit" class="btn w-100 mb-2 fw-semibold" id="loginbtn"
                            style="background:#32CD32; color:#000; font-weight:600; border:none;">
                        Login
                    </button>

                    <div class="text-center text-white mt-3" style="font-size:0.95rem;">
                        Don't have an account?
                        <a asp-controller="Home" asp-action="SignUp"
                           style="color:#32CD32; text-decoration:none; font-weight:500;">
                            Sign Up
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/Login.js"></script>


